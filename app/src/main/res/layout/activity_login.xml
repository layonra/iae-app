<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.montandoagaragem.controller.LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/banda"
        android:contentDescription="@string/app_name"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/imageView">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:background="@drawable/shape_fields"
        android:id="@+id/login_edt"
        android:hint="@string/emailTxt"
        android:layout_marginTop="40dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:inputType="textPassword"
        android:background="@drawable/shape_fields"
        android:ems="10"
        android:id="@+id/senha_edt"
        android:hint="@string/senhaTxt"
        android:layout_marginTop="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/entrarTxt"
            android:textColor="@color/branco"
            android:id="@+id/logar_button"
            android:background="@drawable/shape_button"
            android:layout_marginTop="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cadastraseTxt"
            android:textColor="@color/branco"
            android:id="@+id/cadastrar_button"
            android:background="@drawable/shape_button"
            android:layout_marginTop="10dp"/>



    </LinearLayout>

</RelativeLayout>
